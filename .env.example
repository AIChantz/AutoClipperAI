# AutoClipper AI - Environment Variables for Railway Deployment

# Database (Railway will auto-provide this)
DATABASE_URL=postgresql://username:password@host:port/database

# Authentication
REPLIT_DB_URL=your_replit_db_url

# AI Services (Required)
OPENAI_API_KEY=sk-your_openai_api_key_here

# Payment Processing (Required for subscriptions)
STRIPE_SECRET_KEY=sk_test_or_live_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_or_live_key_here
STRIPE_WEBHOOK_SECRET=whsec_webhook_secret_here

# Social Media APIs (Optional - for auto-publishing)
INSTAGRAM_ACCESS_TOKEN=your_instagram_token
TIKTOK_ACCESS_TOKEN=your_tiktok_token
YOUTUBE_API_KEY=your_youtube_api_key

# Application Configuration
NODE_ENV=production
PORT=8080

# Optional: Custom domain
RAILWAY_STATIC_URL=your-custom-domain.com